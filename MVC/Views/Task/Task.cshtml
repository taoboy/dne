                                        contentType: "application/x-www-form-urlencoded; charset=utf-8",
                                        success: function (json) {
                                            alert(json.message);
                                            window.location.reload();
                                        },
                                        error: function () {
                                            alert('出错了，请检查网络');
                                            window.location.reload();
                                        }
                                    })
                                } else {

                                }
                            });
                        }
                    }
                });
            }

        }
        if (role == 1) {
            $(".delete-content").click(function (e) {
                contentid = $(this).parent().parent().attr("id");
                if (window.confirm("确认吗?")) {
                    success: $.ajax({
                        type: 'post',
                        url: "deleteC?cid=" + contentid,
                        contentType: "application/x-www-form-urlencoded; charset=utf-8",
                        success: function (json) {
                            alert(json.message);
                            location.href = document.referrer;
                        },
                        error: function () {
                            alert('出错了，请检查网络');
                            window.location.reload();
                        }
                    })
                } else {

                }

            })
        }
        $(".delete-content").click(function (e) {
            contentid = $(this).parent().parent().attr("id");
            if (window.confirm("确认吗?")) {
                success: $.ajax({
                    type: 'post',
                    url: "deleteC?cid=" + contentid,
                    contentType: "application/x-www-form-urlencoded; charset=utf-8",
                    success: function (json) {
                        alert(json.message);
                        window.location.reload();
                    },
                    error: function () {
                        alert('出错了，请检查网络');
                        window.location.reload();
                    }
                })
            } else {

            }
        });
        $(".change-content").click(function (e) {
            contentid = $(this).parent().parent().attr("id");
            cont = $(this).parent().find('textarea').val();
            success: $.ajax({
                type: 'post',
                url: "changeC?cid=" + contentid + "&cont=" + cont,
                contentType: "application/x-www-form-urlencoded; charset=utf-8",
                success: function (json) {
                    alert(json.message);
                    window.location.reload();
                },
                error: function () {
                    alert('出错了，请检查网络');
                    window.location.reload();
                }
            })
        });

        //表单提交统一处理
        $('form').validator().on('submit', function (e) {
            if (e.isDefaultPrevented()) {
                //js表单验证不通过
            } else {
                //防止提交表单数据，改用Ajax提交，地址为form里面定义的路径
                e.preventDefault();
                $('form').ajaxSubmit({
                    type: 'post',
                    success: function (json) {
                        alert(json.message);
                        $('.main').find('textarea').val('');
                        window.location.reload();
                    },
                    error: function () {
                        alert('出错了，请检查网络');
                    }
                });
            }
        });
    });
        </script>